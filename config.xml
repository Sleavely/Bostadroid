<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.sleavely.bostadroid" version="1.2.2">

	<name>Bostadroid</name>

	<description>
		Sök lägenheter på Stockholm stads bostadsförmedling.
	</description>

	<author href="http://joakimhedlund.com" email="contact@joakimhedlund.com">
		Joakim Hedlund
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<!-- the following is useful for Build when you have many icons; this way
    Blackberry will use the correct icon --> 
    <icon src="icons/Bostadroid-128.png" default="true" />
    <icon src="icons/Bostadroid-128.png" hover="true" />

<!-- iOS requires specific dimensions for splash screens; classic iPhone screens, Retina 
      Screens, and iPad screen respectively -->
    <icon src="icons/Bostadroid-57.png" width="57" height="57"/> 
    <icon src="icons/Bostadroid-72.png" width="72" height="72"/> 
    <icon src="icons/Bostadroid-114.png" width="114" height="114"/> 

<!-- Android requires specific dimensions; ldpi, mdpi, and hdpi respecitvely. --> 
    <icon src="icons/Bostadroid-36.png" width="36" height="36"/> 
    <icon src="icons/Bostadroid-48.png" width="48" height="48"/> 
    <icon src="icons/Bostadroid-72.png" width="72" height="72"/> 

	<feature name="http://api.phonegap.com/1.0/network"/>
</widget>